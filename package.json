{
	"name": "tasksflow",
	"displayName": "Tasksflow",
	"description": "Help developers workflow with GitHub and Gitlab",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:tasksflow.issue",
		"onCommand:tasksflow.issues",
		"onCommand:tasksflow.configure"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tasksflow.issue",
				"title": "Tasksflow: start working on a given issue"
			},
			{
				"command": "tasksflow.issues",
				"title": "Tasksflow: start working on an issue"
			},
			{
				"command": "tasksflow.configure",
				"title": "Tasksflow: configure the tasksflow extension"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "tasksflow",
					"title": "Tasksflow",
					"icon": "./assets/tasksflow.svg"
				}
			]
		},
		"views": {
			"tasksflow": [
				{
				"id": "tasksflowactivity",
				"name": "Tasksflow panel"
			}
			]
		},
		"configuration": {
			"title": "Tasksflow",
			"properties": {
			  "tasksflow.accessToken.github": {
				"type": ["string", "null"],
				"default": null,
				"description": "Github access token."
			  },
			  "tasksflow.accessToken.gitlab": {
				"type": ["string", "null"],
				"default": null,
				"description": "Gitlab access token."
			  }
			}
		  }
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"generator-code": "^1.3.5",
		"graphql": "^15.4.0",
		"graphql-request": "^3.3.0",
		"simple-git": "^2.21.0",
		"yo": "^3.1.1"
	}
}
